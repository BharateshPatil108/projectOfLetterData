<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="10dp"
    android:layout_marginBottom="5dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="8dp"
        android:background="@drawable/small_border"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const_data"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:padding="15dp"
            android:background="@drawable/small_border">

        <TextView
            android:id="@+id/Received_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/received"
            android:layout_marginStart="15dp"
            android:textColor="@color/blue"
            app:layout_constraintStart_toStartOf="@+id/const_data"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintVertical_bias="0.5"/>

        <TextView
            android:id="@+id/received_number_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=""
            android:layout_marginEnd="10dp"
            android:textStyle="bold"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/const_data"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="8dp"
        android:background="@drawable/small_border"
        app:layout_constraintTop_toBottomOf="@+id/cv_1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const_data_1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:padding="10dp"
            android:layout_gravity="center"
            android:background="@drawable/small_border">

            <TextView
                android:id="@+id/disposed_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/disposed"
                android:layout_marginStart="15dp"
                android:textColor="@color/teal_700"
                app:layout_constraintTop_toTopOf="@+id/const_data_1"
                app:layout_constraintStart_toStartOf="@+id/const_data_1"
                app:layout_constraintVertical_bias="0.5"/>

            <TextView
                android:id="@+id/disposed_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginEnd="15dp"
                android:textStyle="bold"
                app:layout_constraintTop_toTopOf="@+id/const_data_1"
                app:layout_constraintEnd_toEndOf="@+id/const_data_1"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/accepted_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/accepted"
                android:layout_marginTop="5dp"
                android:layout_marginStart="30dp"
                android:textSize="13sp"
                android:textColor="@color/teal_700"
                app:layout_constraintStart_toStartOf="@+id/const_data_1"
                app:layout_constraintTop_toBottomOf="@+id/disposed_text"
                app:layout_constraintVertical_bias="0.5"/>

            <TextView
                android:id="@+id/accepted_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginTop="5dp"
                android:layout_marginEnd="15dp"
                app:layout_constraintTop_toBottomOf="@+id/disposed_number_text"
                app:layout_constraintEnd_toEndOf="@+id/const_data_1"
                app:layout_constraintVertical_bias="0.5" />

            <TextView
                android:id="@+id/rejected_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/rejected"
                android:layout_marginStart="30dp"
                android:textSize="13sp"
                android:layout_marginTop="5dp"
                android:textColor="@color/teal_700"
                app:layout_constraintStart_toStartOf="@+id/const_data_1"
                app:layout_constraintTop_toBottomOf="@+id/accepted_text"
                app:layout_constraintVertical_bias="0.5"/>

            <TextView
                android:id="@+id/rejected_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginEnd="15dp"
                android:layout_marginTop="5dp"
                app:layout_constraintTop_toBottomOf="@+id/accepted_number_text"
                app:layout_constraintEnd_toEndOf="@+id/const_data_1"
                app:layout_constraintVertical_bias="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cv_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        app:cardCornerRadius="8dp"
        android:background="@drawable/small_border"
        app:layout_constraintTop_toBottomOf="@+id/cv_2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const_data_2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_gravity="center"
            android:padding="15dp"
            android:background="@drawable/small_border">

            <TextView
                android:id="@+id/pending_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/pending"
                android:layout_marginStart="15dp"
                android:textColor="@color/ochare"
                app:layout_constraintStart_toStartOf="@+id/const_data_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintVertical_bias="0.5"/>

            <TextView
                android:id="@+id/pending_number_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text=""
                android:layout_marginEnd="10dp"
                android:textStyle="bold"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="@+id/const_data_2"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintVertical_bias="0.5" />

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>