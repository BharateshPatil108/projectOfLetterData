<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".activities.Details_Cmo_Lms_Activity">

    <LinearLayout
        android:id="@+id/lin_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        tools:ignore="MissingConstraints">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/const_head"
            android:layout_width="match_parent"
            android:layout_height="180dp">

            <ImageView
                android:id="@+id/imageView1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:importantForAccessibility="no"
                android:src="@drawable/top_background"
                app:layout_constraintEnd_toEndOf="@+id/const_head"
                app:layout_constraintStart_toStartOf="@id/const_head"
                app:layout_constraintTop_toTopOf="@+id/const_head" />

            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="0dp"
                android:layout_height="0dp"
                android:importantForAccessibility="no"
                android:src="@drawable/header_design"
                app:layout_constraintBottom_toBottomOf="@+id/imageView1"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintHorizontal_bias="1.0"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="@+id/imageView1"
                app:layout_constraintVertical_bias="0.0" />

            <Button
                android:id="@+id/id_log_out"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/log_out"
                android:layout_marginTop="5dp"
                android:textColor="@color/white"
                android:background="@android:color/transparent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toEndOf="@+id/imageView3"
                app:layout_constraintTop_toTopOf="parent"/>

            <ImageView
                android:id="@+id/imageView3"
                android:layout_width="200dp"
                android:layout_height="120dp"
                android:layout_marginTop="10dp"
                android:importantForAccessibility="no"
                android:src="@drawable/kgl_img"
                app:layout_constraintEnd_toEndOf="@+id/imageView1"
                app:layout_constraintStart_toStartOf="@+id/imageView1"
                app:layout_constraintTop_toTopOf="@+id/imageView1" />

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:gravity="center"
                android:text="@string/government_of_karnataka"
                android:textColor="@color/white"
                android:textSize="23sp"
                android:textStyle="bold"
                app:layout_constraintTop_toBottomOf="@+id/imageView3" />

        </androidx.constraintlayout.widget.ConstraintLayout>

        <ScrollView
            android:id="@+id/scroll_head"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/constratint_text"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp">

                <androidx.cardview.widget.CardView
                    android:id="@+id/cm_name_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginEnd="20dp"
                    app:cardCornerRadius="20dp">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/cm_name_img_const_lay"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/cm_img"
                            android:layout_width="60dp"
                            android:layout_height="60dp"
                            android:layout_marginStart="15dp"
                            android:importantForAccessibility="no"
                            android:requiresFadingEdge="vertical"
                            android:src="@drawable/siddaramaiah"
                            app:layout_constraintStart_toStartOf="@+id/cm_name_img_const_lay"
                            app:layout_constraintTop_toTopOf="@+id/cm_name_img_const_lay" />

                        <TextView
                            android:id="@+id/cm_name"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="8dp"
                            android:text="@string/cm_name"
                            android:textSize="20sp"
                            android:textStyle="bold"
                            app:layout_constraintStart_toEndOf="@+id/cm_img"
                            app:layout_constraintTop_toTopOf="@+id/cm_img" />

                        <TextView
                            android:id="@+id/cm_state"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="10dp"
                            android:layout_marginTop="5dp"
                            android:text="@string/cm_state"
                            android:textSize="12sp"
                            app:layout_constraintStart_toEndOf="@+id/cm_img"
                            app:layout_constraintTop_toBottomOf="@+id/cm_name" />
                    </androidx.constraintlayout.widget.ConstraintLayout>

                </androidx.cardview.widget.CardView>

                <androidx.cardview.widget.CardView
                    android:id="@+id/search_cv"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="30dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="@color/blur_blue"
                    app:cardCornerRadius="20dp"
                    android:clickable="true"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/cm_name_cv"
                    android:focusable="true">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:padding="5dp">

                        <ImageView
                            android:id="@+id/search_engin"
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:layout_marginStart="15dp"
                            android:importantForAccessibility="no"
                            android:src="@drawable/search_icon" />

                        <EditText
                            android:id="@+id/search_txt"
                            style="@style/EditTextStyle"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_marginStart="10dp"
                            android:background="@drawable/no_bottom_line_edittxt"
                            android:hint="@string/search"
                            android:singleLine="true"
                            android:importantForAccessibility="no"
                            android:textColor="@color/blur_black"
                            android:layout_weight="1"
                            android:paddingStart="10dp"
                            android:paddingEnd="10dp"
                            android:actionViewClass="android.widget.SearchView"
                            android:autofillHints=""
                            android:clickable="true"
                            android:focusable="true"
                            android:inputType="text"
                            android:imeOptions="actionSearch"/>

                    </LinearLayout>
                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:id="@+id/cv_lin_lay"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginEnd="20dp"
                    android:gravity="center"
                    android:orientation="horizontal"
                    app:layout_constraintEnd_toEndOf="@+id/constratint_text"
                    app:layout_constraintStart_toStartOf="@+id/constratint_text"
                    app:layout_constraintTop_toBottomOf="@+id/search_cv">

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/both_cv_text_const_lay_tr"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_tr"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:backgroundTint="@color/dark_blue"
                            app:cardCornerRadius="25dp"
                            app:layout_constraintEnd_toEndOf="@+id/both_cv_text_const_lay_tr"
                            app:layout_constraintStart_toStartOf="@+id/both_cv_text_const_lay_tr">

                            <TextView
                                android:id="@+id/tr_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/txt_tr"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/total_received"
                            android:textColor="@color/dark_blue"
                            android:textStyle="bold"
                            app:layout_constraintTop_toBottomOf="@+id/cv_tr" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/both_cv_text_const_lay_td"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_td"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:backgroundTint="@color/teal_700"
                            android:visibility="gone"
                            app:cardCornerRadius="25dp"
                            app:layout_constraintEnd_toEndOf="@+id/both_cv_text_const_lay_td"
                            app:layout_constraintStart_toStartOf="@+id/both_cv_text_const_lay_td">

                            <TextView
                                android:id="@+id/td_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/txt_td"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/total_disposed"
                            android:textColor="@color/teal_700"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/cv_td" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                    <androidx.constraintlayout.widget.ConstraintLayout
                        android:id="@+id/both_cv_text_const_lay_tp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="20dp">

                        <androidx.cardview.widget.CardView
                            android:id="@+id/cv_tp"
                            android:layout_width="80dp"
                            android:layout_height="80dp"
                            android:backgroundTint="@color/ochare"
                            android:visibility="gone"
                            app:cardCornerRadius="25dp"
                            app:layout_constraintEnd_toEndOf="@+id/both_cv_text_const_lay_tp"
                            app:layout_constraintStart_toStartOf="@+id/both_cv_text_const_lay_tp">

                            <TextView
                                android:id="@+id/tp_number"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content"
                                android:layout_gravity="center"
                                android:text=""
                                android:textColor="@color/white"
                                android:textSize="20sp"
                                android:textStyle="bold" />
                        </androidx.cardview.widget.CardView>

                        <TextView
                            android:id="@+id/txt_tp"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:text="@string/total_pending"
                            android:textColor="@color/ochare"
                            android:textStyle="bold"
                            android:visibility="gone"
                            app:layout_constraintTop_toBottomOf="@+id/cv_tp" />

                    </androidx.constraintlayout.widget.ConstraintLayout>

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/lin_lay_4"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:orientation="vertical"
                    app:layout_constraintTop_toBottomOf="@+id/cv_lin_lay">

                    <TextView
                        android:id="@+id/cmo_lms_summary"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/cmo_lms_summary_report"
                        android:textColor="@color/blue"
                        android:textSize="20sp"
                        app:layout_constraintStart_toStartOf="parent" />

                    <LinearLayout
                        android:id="@+id/lin_lay_5"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_gravity="end"
                        android:layout_marginStart="20dp"
                        android:background="@drawable/blackcolor_border"
                        android:clickable="true"
                        android:focusable="true"
                        android:gravity="center"
                        android:orientation="horizontal"
                        android:paddingStart="5dp"
                        android:paddingEnd="10dp">

                        <ImageView
                            android:id="@+id/file_img_pdf"
                            android:layout_width="18dp"
                            android:layout_height="24dp"
                            android:layout_marginStart="3dp"
                            android:clickable="true"
                            android:focusable="true"
                            android:importantForAccessibility="no"
                            android:src="@drawable/baseline_file_present_24" />

                        <TextView
                            android:id="@+id/pdf_txt_btn"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:clickable="true"
                            android:focusable="true"
                            android:text="@string/pdf" />

                    </LinearLayout>
                </LinearLayout>

                <androidx.core.widget.NestedScrollView
                    android:id="@+id/nest_scroll_view"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/lin_lay_4">

                    <androidx.recyclerview.widget.RecyclerView
                        android:id="@+id/recyclerView"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:nestedScrollingEnabled="true"
                        android:scrollbars="vertical"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toStartOf="parent" />

                </androidx.core.widget.NestedScrollView>

                <LinearLayout
                    android:id="@+id/btn_lin_lay_1"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:weightSum="2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/nest_scroll_view">

                    <Button
                        android:id="@+id/constituency_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_shape"
                        android:text="@string/constituency"
                        android:textColor="@color/white"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:id="@+id/department_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_shape"
                        android:text="@string/department"
                        android:textColor="@color/white"
                        tools:ignore="ButtonStyle" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/btn_lin_lay_2"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="10dp"
                    android:layout_marginEnd="20dp"
                    android:layout_marginBottom="20dp"
                    android:weightSum="2"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/btn_lin_lay_1">

                    <Button
                        android:id="@+id/subject_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_shape"
                        android:text="@string/subject"
                        android:textColor="@color/white"
                        tools:ignore="ButtonStyle" />

                    <Button
                        android:id="@+id/district_btn"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="10dp"
                        android:layout_weight="1"
                        android:background="@drawable/round_shape"
                        android:text="@string/district"
                        android:textColor="@color/white"
                        tools:ignore="ButtonStyle" />

                </LinearLayout>

            </androidx.constraintlayout.widget.ConstraintLayout>
        </ScrollView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>